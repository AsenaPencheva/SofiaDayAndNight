@using SofiaDayAndNight.Web.Areas.User.Models
@model EventViewModel
@{
	ViewBag.Title = "Event";
}
<time datetime=@Model.Begins>
	<span class="day">@Model.Begins.Day</span>
	<span class="month">@Model.Begins.Month</span>
	<span class="year">@Model.Begins.Year</span>
	<span class="time">@Model.Ends</span>
</time>
<img alt=@Model.Title src="~/Image?id=@Model.Cover.Id" />
<div class="info">
	<h2 class="title">@Model.Title</h2>
	<p class="desc">@Model.EventType</p>
</div>
